{
    "compilerOptions": {
        "module": "CommonJS",
        "types": [
            "node",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/mocha-framework"
        ],
        "target": "ES6",
        "outDir": "./build",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, /* Skip type checking of declaration files. */
        "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
    },
    "include": [
        "src/**/*",
        "test/specs/**/*",
        "app.ts",
        "dev-dep"
      ]
}